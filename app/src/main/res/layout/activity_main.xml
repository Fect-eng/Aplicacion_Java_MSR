<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <io.github.florent37.shapeofview.shapes.ArcView
        android:id="@+id/av_log_fire_container_loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        app:shape_arc_height="20dp"
        app:shape_arc_position="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#083440" />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/pucamarca_para_siempre">

      </ImageView>

    </io.github.florent37.shapeofview.shapes.ArcView>

    <TextView
        android:id="@+id/tv_frag_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controles que Salvan Vidas"
        android:textSize="35sp"
        android:fontFamily="@font/years"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textStyle="normal"
        android:textColor="#090303"
        app:layout_constraintTop_toBottomOf="@+id/av_log_fire_container_loading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/horizontali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_frag_login_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_iniciar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/anthelion"
            android:text="Ingresar"
            android:textSize="26dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>